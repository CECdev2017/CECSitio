<section class="products-grid">
				<div class="container">
					<div class="row products-container">
					<% @cursos.each do |curso| %>
					<% if curso.id <= 9 %>
						<div class="col-md-4 col-sm-6 col-xs-12 product">
							<div class="thumbnail" style="background-image: url('/assets/products/<%= curso.image_file_name %>');">
							<%= image_tag curso.image %>
								<div class="product-details text-center">
									<div class="align-vertical">
										<h3><%= curso.titulo %></h3>
										
										<%= link_to  shop_path, class: "btn btn-primary"  do %>
		  								<i class="fa fa-shopping-cart"></i> Comprar
		  								<% end %>
		  								
										<p class="product-price"><%= number_to_currency curso.precio %></p>
									</div>
								</div>
							</div>
						</div>
					 <% end %>
					 <% end %>
					</div><!-- /.row -->
				</div><!-- /.container -->
			</section>